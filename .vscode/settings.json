{
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/.svn": true,
        "**/CVS": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true
    },
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "ruff.importStrategy": "fromEnvironment",
    "ruff.organizeImports": true
}